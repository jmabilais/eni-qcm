{% extends "EniFrontendBundle::layout.html.twig" %}

{% block content %}
	<div class="row">
		<form action="{{ path("fos_user_security_check") }}" class="form-horizontal" role="form" method="post">
		    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

		    <div class="form-group">
		    	<label for="username" class="col-sm-2 control-label">{{ 'security.login.username'|trans }}</label>
		    	<div class="col-sm-10 col-lg-3">
		    		<input 
		    			class="form-control" 
		    			type="text" 
		    			id="username" 
		    			name="_username" 
		    			value="{{ last_username }}" 
		    			required="required" />
		    	</div>
		   	</div>

		   	<div class="form-group">
			    <label for="password" class="col-sm-2 control-label">{{ 'security.login.password'|trans }}</label>
			    <div class="col-sm-10 col-lg-3">
			    	<input 
			    		class="form-control" 
			    		type="password" 
			    		id="password" 
			    		name="_password" 
			    		required="required" />
			    </div>
			</div>

			<div class="form-group">
				<div class="col-sm-2">
				</div>
				<div class="col-sm-10">
				    <input class="control-label" type="checkbox" id="remember_me" name="_remember_me" value="on" />
				    <label class="control-label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
			    </div>
			    <div class="col-sm-2">
				</div>
				<div class="col-sm-10">
				    <input class="btn btn-info control-label" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
			    </div>
		    </div>
		</form>
	</div>
{% endblock %}